@model IEnumerable<NosTRAILgic.Models.ProfileViewModel>

@{
    ViewBag.Title = "Profile";
}

<h2>@User.Identity.Name 's Profile: </h2>

<h2>List of Trails Meetup created: </h2>

<table class="table table-bordered">

    @foreach (var item in Model)
    {
        int trailCount = 0;

        foreach (var row in item.enumerableCreatedTrails)
        {
            if (trailCount % 5 == 0)
            {
                @Html.Raw("<tr>");
            }

            @Html.Raw("<td width='20 %'>");

            <ul style="list-style-type : none">
                <li><img src="/Content/Upload/@Url.Content(row.ImageLink)" width="100" height="100" /></li>
                <li>@row.Name</li>
                <li>@row.Date.ToShortDateString()</li>
                <li>@row.TimeFrom.ToShortTimeString() - @row.TimeTo.ToShortTimeString()</li>
                <li>@row.Limit</li>
                <li>@Html.ActionLink("Details", "Details_ViewModel", "TrailMeetup", new { id = row.TrailMeetupID }, new { @class = "btn btn-default" })</li>
            </ul>

            @Html.Raw("</td>");

            if (trailCount % 5 == 4)
            {
                @Html.Raw("</tr>");
            }
            trailCount++;
        }
    }

</table>

