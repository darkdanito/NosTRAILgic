@model IEnumerable<NosTRAILgic.Models.TrailMeetup>

@{
    ViewBag.Title = "Index";
}

<h2>Trail Index</h2>
<hr />

<p>
    @Html.ActionLink("Create New Trail", "Create")
</p>

<table class="table table-bordered">


    <tr>
        @foreach (var item in Model)
        {
            <td width="20%">
                <img src="/Content/Upload/@Url.Content(item.TrailCover)" width="100" height="100">
            </td>
        }
    </tr>

    <tr>
        @foreach (var item in Model)
        {
            <td>
                @Html.ActionLink(item.TrailName, "Details", new { id = item.Id })
            </td>
        }
    </tr>

</table>