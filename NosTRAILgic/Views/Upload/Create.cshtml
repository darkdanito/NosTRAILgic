@model NosTRAILgic.Models.Location

@{
    ViewBag.Title = "Create";
}

<h2>Upload Create</h2>

@using (Html.BeginForm("Create", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="control-label col-md-2">
                Museum
            </div>
            <div class="col-md-10">
                <input type="file" name="MuseumFile" id="MuseumFile"/>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                Monument
            </div>
            <div class="col-md-10">
                <input type="file" name="MonumentFile" id="MonumentFile" />
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                Historic Site
            </div>
            <div class="col-md-10">
                <input type="file" name="HistoricSiteFile" id="HistoricSiteFile" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <button class="btn btn-default" type="button" onclick="location.href='@Url.Action("Index", "Home")'">Back to Trail Home</button>
</div>
