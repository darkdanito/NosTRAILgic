@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "collapse navbar-collapse" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(User.Identity.GetUserName() + "'s Profile", "UserProfile", "Home", routeValues: null, htmlAttributes: new { title = "Profile" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="@Url.Action("Register","Account", routeValues: null)"><span class="glyphicon glyphicon-pencil text-center" alt="Register" /><br>Register</a></li>
        <li><a href="@Url.Action("Login","Account", routeValues: null)"><span class="glyphicon glyphicon-log-in text-center" alt="Login" /><br>Login</a></li>

        @*<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
    </ul>
}
