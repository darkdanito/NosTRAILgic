@model IEnumerable<NosTRAILgic.Models.TrailMeetup>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Trail", "Create")
</p>

<table class="table table-bordered">

    <tr>
        @foreach (var item in Model)
        {
            <td width="20%">
                <img src="/Content/Upload/@Url.Content(item.ImageLink)" width="100" height="100">
            </td>
        }
    </tr>
    <tr>
        @foreach (var item in Model)
        {
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.TrailMeetupID })
            </td>
        }
    </tr>
</table>